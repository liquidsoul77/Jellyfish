<Window
    x:Class="$rootnamespace$.$fileinputname$.$safeitemname$"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:$rootnamespace$.$fileinputname$"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="$projectname$ - $fileinputname$"
    Width="800"
    Height="500"
    d:DataContext="{d:DesignInstance Type=local:$fileinputname$ViewModel,
                                     IsDesignTimeCreatable=True}"
    DataContext="{Binding $fileinputname$ViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">
    <Grid />
</Window>
